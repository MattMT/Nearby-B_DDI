<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/daa">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Recomendaciones"
        android:textSize="12dp" />

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Primer RelativeLayout -->
            <RelativeLayout
                android:id="@+id/foto_bar"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/uni" />

            <!-- Segundo RelativeLayout a la derecha del primero con un pequeÃ±o margen -->
            <RelativeLayout
                android:id="@+id/foto_bar_2"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                 android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/foto_bar"
                android:background="@drawable/uni" />

        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:id="@+id/imagen_flecha"
        android:layout_width="20dp"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/flecha"
        android:textAlignment="center"
        android:layout_below="@+id/scroll_view"
        android:clickable="true"/>


</LinearLayout>